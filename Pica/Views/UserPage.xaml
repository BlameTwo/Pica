<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Pica.Views.UserPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:vm="clr-namespace:Pica.ViewModels"
    Title="个人"
    x:DataType="vm:UserViewModel">
    <StackLayout VerticalOptions="Center">
        <StackLayout.Behaviors>
            <toolkit:EventToCommandBehavior Command="{Binding LoadedCommand}" EventName="Loaded" />
        </StackLayout.Behaviors>
        <Button
            Margin="10"
            Clicked="Button_Clicked"
            HeightRequest="50"
            IsVisible="{Binding Loginbuttonvis, Mode=OneWay}"
            Text="去登陆"
            WidthRequest="100" />
        <StackLayout HorizontalOptions="Center" Orientation="Horizontal">
            <Label Text="欢迎！" />
            <Label Text="{Binding UserName, Mode=OneWay}" />
        </StackLayout>
    </StackLayout>
</ContentPage>