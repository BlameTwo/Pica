<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pica.Views.Controls.LoadingUI">
    <ContentView.ControlTemplate>
        <ControlTemplate >
            <Frame BorderColor="{Binding BorderColor}" BindingContext="{Binding Source={RelativeSource TemplatedParent}}">
                <Label Text="{Binding IsRing}"/>
            </Frame>
        </ControlTemplate>
    </ContentView.ControlTemplate>
</ContentView>
